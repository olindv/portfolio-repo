extends ../main.layout.pug

block arrow-down
  .header__down.header__down--position-bottom
    a(href="#").header__down-link
      +icon('arrow_down','arrow_down-icon')

block variables
  - var title = 'Мои работы'

  

block scripts
  script(src='works.bundle.js')

block content
  section.stuff
    .stuff__triangles.stuff__triangles--margin
      svg(fill="#0c0f1e", opacity='0.85', viewbox="0 0 900 150", class="triangle", preserveAspectRatio="none")
          polygon(points="0,0 0,150 900,150")
      svg(fill="#0c0f1e", opacity='0.85', viewbox="0 0 900 150", class="triangle", preserveAspectRatio="none")
          polygon(points="0,150 900,150 900,0")
      .section__text.section__text--background
        h2.section__title.section__title--underline.section__title--padding-bottom Мои работы
  section.section.section-works
    #slider-component

  section(style="background: url('./assets/images/bg.png') center bottom / cover no-repeat").section.section-about
    .container.container-about
      .section__text
        h2.section__title.section__title--underline.section__title--font-size Что обо мне говорят
      .posts
        ul.posts__list
          - var alts = ['Ковальчук Дмитрий', 'Сабанцев Владимир'];
          - var adresses = ['posts/DK.png', 'posts/VS.png'];
          - var texts = ['Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!', 'Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!']
          - var functions = ['— основатель Loftschool', '— преподаватель']
          - for(var i=0; i<2; i++)
            li.posts__item
                .posts__icon
                    +image(`${adresses[i]}`, `${alts[i]}`, 'img img-circle img-objf')
                .posts__text=texts[i]
                .posts__author
                    .posts__author-name=alts[i]
                    .posts__author-function=functions[i]
                .posts__img
      .section-about__form         
        .form-wrapper
          form.form
            .form__contain
              .form__text
                h2.section__title Связаться со мной
              .form__row
                input(type="text", placeholder="Имя", name="name").form__input
              .form__row
                input(type="text", placeholder="Email", name="email").form__input
              .form__row
                textarea(name="message", rows="7", placeholder="Ваше сообщение").form__textarea
            .form__btns.form__btns--work
              button(type="submit").form__btn.form__submit.form__btn--before Отправить
              button(type="reset").form__btn.form__reset Очистить

      .arrow__up
        a(href="#").arrow__up-link
          +icon('portf_arrow_up','arrow__up-icon')


